{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "net.ifnames=0 ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "debian-64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-12.1.0-amd64-netinst.iso",
      "output_directory": "output-debian-12-amd64-{{build_type}}",
      "shutdown_command": "sudo systemctl poweroff",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "type": "vmware-iso",
      "vm_name": "packer-debian-12-amd64",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      },
      "vmx_remove_ethernet_interfaces": true
    },
      {
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "net.ifnames=0 ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-12/preseed.cfg ",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "format": "ova",
      "guest_os_type": "Debian_64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-12.1.0-amd64-netinst.iso",
      "output_directory": "output-debian-12-amd64-{{build_type}}",
      "shutdown_command": "sudo systemctl poweroff",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ],
          ["modifyvm", "{{.Name}}", "--nat-localhostreachable1", "on"]
      ],
      "vm_name": "packer-debian-12-amd64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/virtualbox-iut-bookworm.sh",
        "scripts/vmware.sh",
        "scripts/minimize.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "30000",
    "headless": "false",
    "iso_checksum": "9da6ae5b63a72161d0fd4480d0f090b250c4f6bf421474e4776e82eea5cb3143bf8936bf43244e438e74d581797fe87c7193bbefff19414e33932fe787b1400f",
    "iso_checksum_type": "sha512",
    "memory": "2048",
    "mirror": "http://cdimage.debian.org/debian-cd",
    "ssh_timeout": "60m"
  }
}

